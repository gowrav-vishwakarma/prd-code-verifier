# PRD Code Verifier - Self-Test Environment Configuration
# This file is used for testing the PRD Code Verifier with itself using run-pipeline.sh

# AI Provider Configuration
# Set the default AI provider (openai, gemini, ollama, lm_studio)
DEFAULT_AI_PROVIDER=lm_studio

# OpenAI Configuration (for testing with OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration (for testing with Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Ollama Configuration (for local testing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LM Studio Configuration (for local testing - recommended for self-test)
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=qwen/qwen3-4b-2507

# Application Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Streaming Configuration
# Set to False to disable real-time streaming (faster for small responses)
ENABLE_STREAMING=True

# GitHub Actions Testing (for Act)

# CR Mode AI Configuration (for Continuous Review mode)
CR_AI_PROVIDER=lm_studio
CR_AI_MODEL=qwen/qwen3-4b-2507
CR_AI_BASE_URL=http://127.0.0.1:1234/v1

# CR Mode Configuration
CR_MODE=local
CR_PROJECT_FILE=tests/self-test-project.json
CR_OUTPUT_FOLDER=./reports
CR_RUN_ALL_VERIFICATIONS=true

# These are used when testing with the run-pipeline.sh script
GITHUB_TOKEN=your_github_token_here
DISCORD_WEBHOOK=your_discord_webhook_url_here
COVERAGE_REPORTER_TOKEN=your_coverage_token_here

# Docker Resource Limits (for Act testing)
# Uncomment and adjust based on your system capabilities
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=2

# Environment Substitution Variables
# These can be used in project files with $VARIABLE_NAME syntax
REPO_URL=https://github.com/gowrav-vishwakarma/prd-code-verifier
REPO_BRANCH=main

# Test Data Paths (as users would configure for private repos)
# These point to the current repository for self-testing
# Note: $GITHUB_TOKEN will be substituted with the actual token
DOCUMENTATION_REPO=https://$GITHUB_TOKEN@github.com/gowrav-vishwakarma/prd-code-verifier.git
DOCUMENTATION_BRANCH=main
FRONTEND_REPO=https://$GITHUB_TOKEN@github.com/gowrav-vishwakarma/prd-code-verifier.git
FRONTEND_BRANCH=main
BACKEND_REPO=https://$GITHUB_TOKEN@github.com/gowrav-vishwakarma/prd-code-verifier.git
BACKEND_BRANCH=main

# Verification Settings
# These control how the verification process works
VERIFICATION_TIMEOUT=300
MAX_RETRIES=3
ENABLE_DETAILED_LOGGING=True

# Output Configuration
# These control how reports are generated and saved
REPORT_FORMAT=markdown
INCLUDE_CODE_SNIPPETS=True
INCLUDE_RECOMMENDATIONS=True
GENERATE_SUMMARY=True

# Security Settings
# These control security-related features
ENABLE_FILE_VALIDATION=True
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.vue,.html,.md,.json,.yml,.yaml

# Performance Settings
# These control performance-related features
ENABLE_PARALLEL_PROCESSING=True
MAX_CONCURRENT_VERIFICATIONS=3
CACHE_VERIFICATION_RESULTS=True
CACHE_DURATION_HOURS=24
